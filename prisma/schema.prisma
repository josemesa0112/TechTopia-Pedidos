generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  password  String
  name      String?
  role      Role        @default(USER)
  createdAt DateTime    @default(now())
  movimientos Movimiento[]
  maestros   Maestro[]  @relation("CreadorDeMaestros")
}

model Maestro {
  id        Int         @id @default(autoincrement())
  nombre    String
  saldo     Int         @default(0)
  creadorId Int
  creador   User        @relation("CreadorDeMaestros", fields: [creadorId], references: [id])
  movimientos Movimiento[]
}

model Movimiento {
  id            Int       @id @default(autoincrement())
  maestroId     Int
  maestro       Maestro   @relation(fields: [maestroId], references: [id])
  tipo          MovimientoTipo
  cantidad      Int
  responsableId Int
  responsable   User      @relation(fields: [responsableId], references: [id])
  createdAt     DateTime  @default(now())
}

enum Role {
  ADMIN
  USER
}

enum MovimientoTipo {
  ENTRADA
  SALIDA
}

